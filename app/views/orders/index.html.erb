<h1 class="text-2xl font-bold mb-4">My Orders</h1>

<table class="min-w-full divide-y divide-gray-200 border rounded-lg">
  <thead>
    <tr class="bg-gray-100 text-left">
      <th class="px-4 py-2">Order </th>
      <th class="px-4 py-2">Status</th>
      <th class="px-4 py-2">Total</th>
      <th class="px-4 py-2">Payment</th>
      <th class="px-4 py-2">Created At</th>
      <th class="px-4 py-2"></th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-200">
    <% @orders.each do |order| %>
      <tr>
        <td class="px-4 py-2"><%= order.id %></td>
        <td class="px-4 py-2">
          <span class="px-2 py-1 rounded-full text-white <%= order.fulfilled? ? 'bg-green-500' : order.pending? ? 'bg-yellow-500' : 'bg-gray-500' %>">
            <%= order.status.capitalize %>
          </span>
        </td>
        <td class="px-4 py-2">$<%= number_with_precision(order.total_amount, precision: 2) %></td>
        <td class="px-4 py-2"><%= order.payment_method %></td>
        <td class="px-4 py-2"><%= order.created_at.strftime("%b %d, %Y %H:%M") %></td>
        <td class="px-4 py-2">
          <%= link_to "View", order_path(order), class: "text-blue-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
