<div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded-xl shadow-md">
  <div class="flex flex-col items-center">
    <% if current_user.profile_photo.attached? %>
      <%= image_tag current_user.profile_photo.variant(resize_to_fill: [100, 100]), class: "h-24 w-24 rounded-full object-cover border" %>
      <%= link_to "Edit Profile", edit_profile_path, class: "mt-4 inline-block px-4 py-1 bg-dark text-white rounded-md hover:bg-primary" %>
    <% else %>
      <div class="h-24 w-24 rounded-full bg-gray-300 flex items-center justify-center">
        <span class="text-3xl text-gray-600 font-bold"><%= current_user.name&.first&.upcase || "U" %></span>
      </div>
    <% end %>

    <h1 class="mt-4 text-xl font-semibold"><%= current_user.name || "No Name" %></h1>
    <p class="text-gray-500"><%= current_user.email %></p>
  </div>
</div>
