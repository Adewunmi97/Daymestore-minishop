<div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded-xl shadow-md">
<h1 class="text-xl font-semibold mb-4">Edit Profile</h1>

<%= turbo_frame_tag "edit_profile" do %>
  <%= form_with model: @user, url: profile_path, method: :patch, data: { turbo_frame: "_top", turbo_stream: true }, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium" %>
      <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium" %>
      <%= f.email_field :email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div>
      <%= f.label :profile_photo, "Profile Photo", class: "block text-sm font-medium" %>
      <%= f.file_field :profile_photo, accept: "image/*", class: "mt-1 block w-full" %>
      <% if @user.profile_photo.attached? %>
        <%= image_tag @user.profile_photo.variant(resize_to_fill: [80, 80]), class: "mt-2 rounded-full h-20 w-20 object-cover" %>
      <% end %>
    </div>

    <%= f.submit "Save Changes", class: "bg-stone-600 text-white px-4 py-2 rounded-md hover:bg-stone-700" %>
  <% end %>
  <% end %>
</div>