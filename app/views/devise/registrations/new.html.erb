<div class="min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-6">
    <h2 class="text-3xl font-bold text-center text-primary mb-6">Create Account</h2>

    <%= form_with model: resource, url: registration_path(resource_name), class: "space-y-4" do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name, class: "block text-sm font-medium text-primary" %>
        <%= f.text_field :name, autofocus: true, class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-primary focus:outline-none" %>
      </div>

      <div>
        <%= f.label :profile_photo, "Profile Photo", class: "block text-sm font-medium" %>
        <%= f.file_field :profile_photo, accept: "image/*", class: "mt-1 block w-full" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-primary" %>
        <%= f.email_field :email, autofocus: true, class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-primary focus:outline-none" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-primary" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-primary focus:outline-none" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-primary" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-primary focus:outline-none" %>
      </div>

      <div>
        <%= f.submit "Sign Up", class: "w-full bg-dark text-white py-2 px-4 rounded-lg hover:bg-primary transition duration-200" %>
      </div>
    <% end %>

    <p class="text-sm text-center text-primary mt-6">
      Already have an account?
      <%= link_to "Sign in", new_session_path(resource_name), class: "text-dark hover:underline" %>
    </p>
  </div>
</div>
