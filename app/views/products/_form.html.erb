<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
    <div class="sm:col-span-6">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :title, label: false, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full border-gray-300 rounded-md"%>
      </div>
    </div>

    <div class="sm:col-span-6">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_area :description, label: false, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full border-gray-300 rounded-md"%>
      </div>
    </div>

    <div class="sm:col-span-6">
      <%= form.label :price, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :price, label: false, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full border-gray-300 rounded-md"%>
      </div>
    </div>

    <div class="sm:col-span-6">
      <%= form.submit "Create Product", class: "button" %>
    </div>
  </div>
<% end %>
