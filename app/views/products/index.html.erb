<div id="products" class="py-12 max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-8">
  <% @products.each do |product| %>
    <%= link_to product, class:"h-100 w-72 overflow-hidden rounded-lg shadow-lg mx-auto bg-white" do %>
      <div class="h-48 border-b-2 border-lighter relative">
        <div style="display: block; overflow: hidden; position: absolute; inset: 0px; box-sizing: border-box; margin: 0px;">
        <% if product.images.attached? %>
          <%= image_tag product.images.first, class: "transform duration-500 ease-in-out hover:scale-110"  %>
        <% end %>
        </div>
      </div>
      <div class="h-40 relative">
        <div class="font-primary text-primary text-xl pt-4 px-4 font-semibold">
          <%= product.title %>
        </div>
        <div class="text-white font-primary font-medium text-base absolute bottom-0 left-0 mb-4 pl-4 pr-6 pb-1 pt-1 bg-dark rounded-tr-sm">
          $<span class="text-lg"><%= product.price %></span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
